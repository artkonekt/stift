{
    "name": "konekt/stift",
    "description": "Stift is a Concord box that handles projects, issues & time tracking",
    "type": "library",
    "minimum-stability": "dev",
    "keywords": ["laravel", "concord", "concord-box"],
    "license": "MIT",
    "authors": [
        {
            "name": "Attila Fulop",
            "homepage": "https://github.com/fulopattila122"
        }
    ],
    "support": {
        "issues": "https://github.com/artkonekt/stift"
    },
    "require": {
        "php": ">=7.0.0",
        "konekt/appshell": "dev-master",
        "konekt/client": "dev-master"
    },
    "require-dev": {
        "orchestra/testbench": "~3.4.2",
        "phpunit/phpunit" : "^6.0"
    },
    "autoload": {
        "psr-4": { "Konekt\\Stift\\": "src"}
    },
    "autoload-dev": {
        "psr-4": {
            "Konekt\\Stift\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit"
    }
}
